{
  "extends": [
    "spectral:oas"
  ],
  "rules": {
    "200-responses": {
      "description": "Operation must have a `200` response code",
      "type": "validation",
      "given": "$.paths.*[?( @property === 'get' || @property === 'put' || @property === 'post' || @property === 'delete' || @property === 'options' || @property === 'head' || @property === 'patch' || @property === 'trace' )].responses",
      "then": {
        "function": "schema",
        "functionOptions": {
          "schema": {
            "type": "object",
            "required": [
              "200"
            ]
          }
        }
      }
    },
    "400-responses": {
      "description": "Operation must have a `400` response code",
      "type": "validation",
      "given": "$.paths.*[?( @property === 'get' || @property === 'put' || @property === 'post' || @property === 'delete' || @property === 'options' || @property === 'head' || @property === 'patch' || @property === 'trace' )].responses",
      "then": {
        "function": "schema",
        "functionOptions": {
          "schema": {
            "type": "object",
            "required": [
              "400"
            ]
          }
        }
      }
    }
  }
}